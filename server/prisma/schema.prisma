generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum InvoiceStatus {
  paid
  unpaid
}

model Invoice {
  id          String        @id
  clientName  String
  amountCents Int
  currency    String        @default("EUR")
  issueDate   DateTime
  dueDate     DateTime
  status      InvoiceStatus

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([dueDate])
  @@index([status])
  @@index([clientName])
}
